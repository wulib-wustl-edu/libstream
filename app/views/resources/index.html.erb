<h1>Listing articles</h1>

<table>
  <tr>
    <th>Item ID</th>
    <th>Title</th>
    <th>Instructor</th>
  </tr>

  <% @resources.each do |resource| %>
    <tr>
      <td><%= resource.item_id %></td>
      <td><%= resource.title %></td>
      <td><%= resource.instructor %></td>
      <td><%= link_to 'Show', resource_path(resource) %></td>
      <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
      <td><%= link_to 'Destroy', resource_path(resource),
                      method: :delete,
                      data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>

