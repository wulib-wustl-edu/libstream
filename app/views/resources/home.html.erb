<% provide(:title, "Home") %>
<div class="container">
  <div class="center jumbotron">
    <h1>Welcome to WashU Stream</h1>
    <h3>
      University Libraries Streaming Reserves
    </h3>
  </div>

  <div class="container">
    <!-- Example row of columns -->
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Upload Manager</h3>
          </div>
          <div class="panel-body">
            <p>Upload video files for streaming.</p>
            <% if current_user[:group] == 'superadmin' %>
              <p><%= link_to "Upload Music", new_music_path, :class => "btn btn-default" %></p>
              <p><%= link_to "Upload Video", new_video_path, :class => "btn btn-default" %></p>
            <% elsif current_user[:group] == 'mradmin' %>
              <p><%= link_to "Upload Music", new_music_path, :class => "btn btn-default" %></p>
            <% elsif current_user[:group] == 'sradmin' %>
              <p><%= link_to "Upload Video", new_video_path, :class => "btn btn-default" %></p>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Reserves Manager</h3>
          </div>
          <div class="panel-body">
            <p>Manage and review list of streaming reserves</p>
            <% if current_user[:group] == 'superadmin' %>
              <p><%= link_to "All", resources_path, :class => "btn btn-default" %></p>
              <p><%= link_to "Music", music_index_path, :class => "btn btn-default" %></p>
              <p><%= link_to "Video", videos_path, :class => "btn btn-default" %></p>
            <% elsif current_user[:group] == 'mradmin' %>
              <p><%= link_to "Music", music_index_path, :class => "btn btn-default" %></p>
            <% elsif current_user[:group] == 'sradmin' %>
              <p><%= link_to "Video", videos_path, :class => "btn btn-default" %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
