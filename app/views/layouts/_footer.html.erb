            <%= link_to(image_tag('CAM_Horz_CMYKplusCustRed_solid_pos.png', :alt => 'Give to the Libraries', :style => 'width: 320px;height:auto;padding:4px;background-color:#fff'), "https://gifts.wustl.edu/GiftForm.aspx?brd=Libraries") %>
