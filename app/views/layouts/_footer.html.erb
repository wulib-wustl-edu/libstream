          <h3 class="panel-title">Popular Links</h3>
        </div>
        <div class="panel-body">
          <!-- List group -->
          <div class="list-group">
            <%= link_to "FAQ", "http://libanswers.wustl.edu/", :class => 'list-group-item' %>
